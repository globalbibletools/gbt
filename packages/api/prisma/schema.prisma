// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "./client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Book {
  id     Int     @id
  name   String
  search String  @unique // This gives us a human readable key to look up books from URL params.
  Verse  Verse[]
}

model Verse {
  id      Int    @id
  number  Int
  chapter Int
  book    Book   @relation(fields: [bookId], references: [id])
  bookId  Int
  Word    Word[]

  @@unique([chapter, number])
}

model Word {
  id      String    @id
  text    String
  verse   Verse     @relation(fields: [verseId], references: [id])
  verseId Int
  order   Int
  form    LemmaForm @relation(fields: [formId], references: [id])
  formId  String

  @@unique([verseId, order])
}

model LemmaForm {
  id      String @id
  grammar String
  lemma   Lemma  @relation(fields: [lemmaId], references: [id])
  lemmaId String
  word    Word[]
}

model Lemma {
  id    String      @id
  forms LemmaForm[]
}

model VerseTranslation {
  verseId     String
  langId      String
  translation String

  @@id([verseId, langId])
}

model Language {
  id   String @id @default(dbgenerated("generate_ulid()")) @db.Uuid
  code String @unique
  name String
}
