// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "./client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Book {
  id      Int       @id
  name    String
  search  String    @unique // This gives us a human readable key to look up books from URL params.
  Chapter Chapter[]
}

model Chapter {
  id     Int     @id
  number Int
  book   Book    @relation(fields: [bookId], references: [id])
  bookId Int
  Verse  Verse[]

  @@unique([bookId, number])
}

model Verse {
  id        Int     @id
  number    Int
  chapter   Chapter @relation(fields: [chapterId], references: [id])
  chapterId Int

  @@unique([chapterId, number])
}

model Language {
  id   String @id @default(dbgenerated("generate_ulid()")) @db.Uuid
  code String @unique
  name String
}
