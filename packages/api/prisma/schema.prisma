// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "./client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Book {
  id     Int     @id
  name   String
  search String  @unique // This gives us a human readable key to look up books from URL params.
  verses Verse[]
}

model Verse {
  id           Int                @id
  number       Int
  chapter      Int
  book         Book               @relation(fields: [bookId], references: [id])
  bookId       Int
  words        Word[]
  translations VerseTranslation[]

  @@unique([bookId, chapter, number])
}

model Word {
  id      String    @id
  text    String
  verse   Verse     @relation(fields: [verseId], references: [id])
  verseId Int
  order   Int
  form    LemmaForm @relation(fields: [formId], references: [id])
  formId  String

  @@unique([verseId, order])
}

model LemmaForm {
  id      String @id
  grammar String
  lemma   Lemma  @relation(fields: [lemmaId], references: [id])
  lemmaId String
  word    Word[]
}

model Lemma {
  id    String      @id
  forms LemmaForm[]
}

model VerseTranslation {
  verse       Verse    @relation(fields: [verseId], references: [id])
  verseId     Int
  language    Language @relation(fields: [languageId], references: [id])
  languageId  String   @db.Uuid
  translation String

  @@id([verseId, languageId])
}

model Language {
  id                String             @id @default(dbgenerated("generate_ulid()")) @db.Uuid
  code              String             @unique
  name              String
  verseTranslations VerseTranslation[]
}
