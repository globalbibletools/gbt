{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "packages/api",
        "outputPath": "dist/packages/api"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/api"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build",
        "dev": true,
        "port": 4300
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "api:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "api:build:production"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/api/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node -O '{\"module\":\"commonjs\"}' --project packages/api/tsconfig.json packages/api/prisma/seed.ts"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate --schema=packages/api/prisma/schema.prisma"
      }
    },
    "prisma-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma migrate dev --schema=packages/api/prisma/schema.prisma"
      }
    },
    "prisma-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma migrate deploy --schema=packages/api/prisma/schema.prisma"
      }
    },
    "prisma-validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma validate --schema=packages/api/prisma/schema.prisma"
      }
    },
    "prisma-format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma format --schema=packages/api/prisma/schema.prisma"
      }
    }
  },
  "tags": []
}
