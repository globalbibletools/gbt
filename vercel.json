{
  "rewrites": [
    {
      "source": "api/:path*",
      "destination": "api/:path",
      "has": [
        {
          "type": "host",
          "value": "gloss-translation-api.*"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "gloss-translation.vercel.app"
        }
      ],
      "destination": "https://gloss-translation-api.vercel.app/api/:path"
    },
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "host",
          "value": "gloss-translation(?<host>-.+)?"
        }
      ],
      "destination": "https://gloss-translation-api:host/api/:path"
    },
    { 
      "source": "/([^.]+)",
      "destination": "/"
    }
  ]
}